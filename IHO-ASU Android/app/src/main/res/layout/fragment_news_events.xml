<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <ImageButton
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:id="@+id/customBackButton"
        android:background="@drawable/header_nws_events"
        android:onClick="onClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/customBackButton">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEWS"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:textSize="20dp" />
            <Button
                android:id="@+id/ne1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:text="Click to view                                         >"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:onClick="onClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nEVENTS"
                android:id="@+id/textView4"
                android:textStyle="bold"
                android:textSize="20dp" />
            <Button
                android:id="@+id/ne2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:text="The Next Lecture                                 >"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:onClick="onClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nTRAVEL AND LEARN"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textSize="20dp"
                android:clickable="false" />

            <Button
                android:id="@+id/ne3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:text="IHO Travel And Learn                        >"
                android:onClick="onClick"
                android:visibility="visible"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
